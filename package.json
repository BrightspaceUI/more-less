{
  "name": "d2l-more-less",
  "private": true,
  "description": "Polymer-based web component for a D2L more-less control",
  "scripts": {
    "postinstall": "polymer install --variants",
    "lint": "npm run lint:html && npm run lint:wc",
    "lint:html": "eslint *.html demo/*.html test/*.html",
    "lint:wc": "polymer lint -i *.html",
    "test:polymer:local": "polymer test --skip-plugin sauce",
    "test:polymer:sauce": "polymer test --skip-plugin local",
    "test": "npm run lint && npm run test:polymer:local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrightspaceUI/more-less.git"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/BrightspaceUI/more-less/issues"
  },
  "homepage": "https://github.com/BrightspaceUI/more-less#readme",
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^4.0.5",
    "polymer-cli": "^1.7.7"
  }
}
